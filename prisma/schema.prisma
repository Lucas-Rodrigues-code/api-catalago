generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

// ...existing code...

enum VideoStatus {
  uploaded
  processing
  encoded
  published
  blocked
}

model Video {
  id               String      @id @default(uuid()) @db.Uuid
  title            String
  description      String
  release_year     Int
  duration_seconds Int
  status           VideoStatus
  created_at       DateTime    @default(now())
  updated_at       DateTime?   @updatedAt
}
